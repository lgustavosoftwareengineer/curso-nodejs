{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}

<h3>Editar Categoria</h3>
<div class="card">
    
    <div class="card-body"></div>    
    <form action="/admin/categorias/edit" method="post">
        <input type="hidden" name="id" value="{{categoria._id}}">
        <label for="nome"> Nome: </label>
        <div class="input-group">
            <input type="text" name="nome" id="nome" class="form-control" value="{{categoria.nome}}">  
        </div>

        <label for="slug"> Slug: </label>
        <div class="input-group">
            <input type="text" name="slug" id="slug" class="form-control" value="{{categoria.slug}}">  
        </div>     
           
        <br>

        <input type="submit" class="btn btn-success" value="Editar categoria">
    </form>
</div>

</form>