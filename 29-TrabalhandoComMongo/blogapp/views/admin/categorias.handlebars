<h2>Lista de categorias</h2>
<hr>
<a href="/admin/categorias/add" class="btn btn-outline-success">Nova categoria</a>
{{#each categorias}}

    <div class="card">
        <div class="card-body">
            <div>
                <h4>{{nome}}</h4>
                <small>{{slug}}</small><br>
                <small>{{date}}</small>
            </div>
            <a class="btn btn-outline-success mt-3" href="/admin/categorias/edit/{{_id}}">Editar categoria</a>
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-4">Nenhuma categoria registrada</h4>
{{/each}}